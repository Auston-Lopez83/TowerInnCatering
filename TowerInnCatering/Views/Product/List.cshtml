@{
    ViewData["Title"] = "Menu";
}
@model List<TowerInnCatering.Models.Product>


@{
    Layout = "_Layout";
}
<h1 style="padding-bottom:40px;">Our Buffets</h1>
<hr class="divider">

@foreach (var p in Model) {
<div class="panel panel-default">
	<div class="panel-heading">
    <h3 class="panel-title">@p.Name: $@p.Price.ToString("N2")</h3>
	</div>
	<div class="panel-body">
    	<div class="media">
		<a class="pull-left">
			<img class="media-object" src="@Url.Content(p.Image)" height="120">
		</a>
		<div class="media-body">
			<p>@p.Description</p>
		</div>
	</div>
	</div>
</div>	
}

